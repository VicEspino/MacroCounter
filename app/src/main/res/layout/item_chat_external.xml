<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_user_msg"
            android:layout_width="@dimen/icon_img_msg"
            android:layout_height="@dimen/icon_img_msg"
            android:layout_margin="8dp"
            android:src="@drawable/icon_img_msg"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/data_mensaje_recibido"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/img_user_msg"
            tools:layout_editor_absoluteY="12dp"
            android:layout_gravity="center"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>